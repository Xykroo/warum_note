## Find Database lenght ...
ARR_LENGHT=${#arr[@]}

if [ -z $1 ]; then
	## Choose a randoom entry ...
	RAND_NUMB=$(( ( RANDOM % $ARR_LENGHT )  + 1))-1

	## Give out ...
	echo "${arr[$RAND_NUMB]}"
else

	if [ "$1" = "-all" ]; then

		for (( i=0; i<=$ARR_LENGHT; i++ ))
		do
			## Give out ...
			echo "${arr[i]}"
			echo "   "			
		done
	else

		## now loop through the above array
		for i in "${arr[@]}"
		do
		  	if [[ $i = *$1* ]]; then
				echo $i
				echo "   "
			fi
		done

	fi

fi










